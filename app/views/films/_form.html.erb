<%= form_for(@film) do |f| %>
  <% if @film.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@film.errors.count, "error") %> prohibited this film from being saved:</h2>

      <ul>
      <% @film.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :filmname %>
  </div>
  <div class="field">
    <%= f.label :actors %><br />
    <%= f.text_field :actors %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 12 %>
  </div>
  <div class="field">
    <%= f.label :director %><br />
    <%= f.text_field :director %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image_url %>  <!--  Have another look -->
    <%= f.file_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :length_of_film %><br />
    <%= f.text_field :length %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :release_year %><br />
    <%= f.text_field :release_year %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
